  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "directories": {
    "lib": "./src/lib"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "lint": "eslint .",
    "build": "rimraf ./dist && tsc",
    "start:example": "yarn build && webpack serve --config ./example/webpack.config.js --progress",
